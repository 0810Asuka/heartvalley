/* pages/updateinfo/updateinfo.wxss */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.item {
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border: 1rpx solid rgb(0, 0, 0);
}

.label {
  width: 300rpx;
  font-size: 36rpx;
  color: #333;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-left: 120rpx;
}

.getava {
  width: 30rpx;
  text-align: center;
  font-size: 26rpx;
  margin-left: 20rpx;
  background-color: #B0C4DE;
}

.input {
  flex: 1;
  height: 60rpx;
  border: none;
  padding: 0 20rpx;
  font-size: 36rpx;
  color: #333;
}

.button {
  width: 100%;
  height: 80rpx;
  line-height: 45rpx;
  text-align: center;
  background-color: #B0C4DE;
  color: rgb(0, 0, 0);
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
}
