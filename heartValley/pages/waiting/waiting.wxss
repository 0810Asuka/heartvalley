/* pages/waiting/waiting.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  display: block;
  margin: 20rpx;
  padding: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  text-align: justify;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
}


.agree-button {
  position: fixed;
  bottom: 40rpx;
  width: 100%;
  height: 80rpx;
  line-height:40rpx;
  text-align: center;
  background-color: #eaf7de;
  color: rgb(52, 50, 50);
  font-size: 28rpx;
  border-radius: 20rpx;
}
