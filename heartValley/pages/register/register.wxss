/* pages/register/register.wxss */
.wrapper {
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}

.welcome {
  position: relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #555;
}

.input-content {
  padding: 0 60rpx;
}

.input-item {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background: #f8f6fc;
  height: 80rpx;
  border-radius: 4px;
  margin-bottom: 40rpx;
}

.input-item-1 {
  height: 120rpx;
}

.input-item:last-child {
  margin-bottom: 0;
}

.input-item .tit {
  margin-top: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #606266;
  width: 30%;
}

.input-item input {
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #303133;
  width: 70%;
}

.get-code {
  width: 180rpx;
  height: 60rpx;
  line-height: 30rpx;
  border-radius: 30rpx;
  background: hsl(150, 65%, 52%);
  color: rgb(0, 0, 0);
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  text-align: center;
}

.confirm-btn {
  width: 630rpx !important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: hsl(150, 65%, 52%);
  color: rgb(0, 0, 0);
  font-size: 32rpx;
  padding: 0;
}


